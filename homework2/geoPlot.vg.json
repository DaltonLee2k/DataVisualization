{
    "$schema":  "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 500,
    "projection": {
        "type": "albersUsa"
    },
    "layer": [
        {
            "data": {
                "url": "data.json",
                "format": {
                    "type": "topojson",
                    "feature": "states"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white"
            }
        },
        {
            "data":{
                "url": "data.json"
            },
            "encoding": {
                "longitude": {
                    "field": "lon",
                    "type": "quantitative"
                  },
                  "latitude": {
                    "field": "lat",
                    "type": "quantitative"
                  }
                },
            }
        }
        
    ]

}